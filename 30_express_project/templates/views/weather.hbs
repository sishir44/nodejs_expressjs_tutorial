<!DOCTYPE html>
<html lang="en">
<head>
  {{> headerlinks}}
</head>
<body>

    {{> navbar}}

    <!-- Header Code-->

    <div class="container-fluid main_header">
        <div class="row">
            <div class="col-md-10 col-12 mx-auto">

                <div class="main_content">
                    <form class="temp_form">
                        <input type="text" id="cityName" placeholder="Enter Your City Name" autocomplete="off">
                        <input type="submit" value="search" id="submitBtn">
                    </form>
                </div>

                <div class="tempInformation">
                    <div class="top_layer">
                        <p id="day"></p>
                        <p id="today_date"></p>
                    </div>
                
                    <div class="main_layer">
                        <p id="city_name">Get Output</p>
                        <div class="middle_layer data_hide">
                            <p id="temp"><span id="temp_real_val">0</span><sup>o</sup>C</p>
                            <p id="temp_status"></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Footer Code -->
    {{> footer}}


    <script src="js/main.js"></script>

    <script>
        const day = document.getElementById("day");
        const today_date = document.getElementById("today_date");

        const getCurrentDay = () => {
            var weekday = new Array(7);
            weekday [0] = "Sun";
            weekday [1] = "Mon";
            weekday [2] = "Tue";
            weekday [3] = "Wed";
            weekday [4] = "Thu";
            weekday [5] = "Fri";
            weekday [6] = "Sat";

            let currentTime = new Date();
            let days = weekday[currentTime.getDay()];
            day.innerText = days;
        };
        getCurrentDay();

        const getCurrentTime = () => {
            var months = [
                "Jan",
                "Feb",
                "Mar",
                "Apr",
                "May",
                "June",
                "July",
                "Aug",
                "Sept",
                "Oct",
                "Nov",
                "Dec"
            ];
            var now = new Date();
            var month = months[now.getMonth()];
            var day1 = now.getDate();
            today_date.innerText = `${day1}, ${month}`;     
        };
        getCurrentTime();
    </script>  
</body>
</html>